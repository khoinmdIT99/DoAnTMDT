@model Domain.Shop.Dto.Cart.CartViewModel
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
               
                   <div class="card-header">
                        <h5 class="card-title">Chi tiết đơn hàng</h5>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <div class="box-body">
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label class="col-sm-6 control-label">Tên khách hàng</label>
                                        <div class="col-sm-10">
                                            <input class="form-control" value="@Model.Customer.FirstName" readonly=""/>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-6 control-label">Số điện thoại</label>
                                        <div class="col-sm-10">
                                            <input class="form-control" value="@Model.Customer.PhoneNo" readonly=""/>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-6control-label">Địa chỉ</label>
                                        <div class="col-sm-10">
                                            <input class="form-control" value="@Model.Customer.Province, @Model.Customer.District, @Model.Customer.Address" readonly=""/>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-6 control-label">Thời gian mua</label>
                                        <div class="col-sm-10">
                                            <input class="form-control" value="@Model.CreateAt.ToString()" readonly=""/>
                                        </div>
                                    </div>

                                </div>
                                <div class="col-sm-6">
                                    <div class="table-responsive">
                                        <table class="table table-bordered">
                                            <thead>
                                                <tr>
                                                    <td class="text-left">Product Name</td>
                                                    <td class="text-left">Model</td>
                                                    <td class="text-left">Quantity</td>
                                                    <td class="text-right">Unit Price</td>
                                                    <td class="text-right">Total</td>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in Model.Products)
                                                {
                                                    <tr>
                                                        <td class="text-left"><a>@item.Product.ProductName</a></td>
                                                        <td class="text-left">@item.Product.ProductTypeName</td>
                                                        <td class="text-left"> @item.Quantity</td>
                                                        <td class="text-right"> @item.Product.PriceAfter?.ToString("N0") VNĐ</td>
                                                        <td class="text-right">@((item.Quantity * item.Product.PriceAfter)?.ToString("N0")) VNĐ</td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                        <p>Tổng số lượng : @Model.Total</p>
                                        <p>Tổng tiền : @Model.TotalPrice.ToString("N0") VNĐ</p>
                                        <p>Hình thức giao hàng: 
                                            @if (Model.ShippingMethod == 1)
                                            {
                                                <span >Qua shop nhận hàng</span> 
                                            }
                                            @if (Model.ShippingMethod == 2)
                                            {
                                                <span >Giao hàng tận nơi</span> 
                                            }
                                        </p>
                                        <p>Hình thức thanh toán: 
                                            @if (Model.PaymentMethod == 1)
                                            {
                                                <span >Paypal</span> 
                                            }
                                            @if (Model.PaymentMethod == 2)
                                            {
                                                <span >Credit Card</span> 
                                            }
                                            @if (Model.PaymentMethod == 3)
                                            {
                                                <span >Ngân hàng</span> 
                                            }
                                            @if (Model.PaymentMethod == 4)
                                            {
                                                <span >Thanh toán tại cửa hàng</span> 
                                            }
                                            @if (Model.PaymentMethod == 5)
                                            {
                                                <span >Thanh toán khi nhận hàng</span> 
                                            }
                                        </p>
                                        <p>
                                            @Model.Status
                                        </p>
                                    </div>
                                </div>
                            </div>
                            


                        </div>
                        <!-- /.box-body -->
                    </div>
                    <div class="card-footer">
                        <a href="@Url.ActionLink("Index")" role="button" class="btn btn-default">Quay lại</a>
                    </div>
                
            </div>
            <!-- /.card -->
        </div>
        <!-- /.col -->
    </div>
</section>
