@model Domain.Shop.Dto.ShopAddress.ShopAddressViewModel
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <form class="form-horizontal" method="post" onsubmit="return checkForm()" action="@Url.ActionLink("Update")" asp-antiforgery="true">
                    <div class="card-header">
                        <h5 class="card-title">Cập nhật địa chỉ</h5>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <div class="box-body">
                            <input type="hidden" asp-for="Id" />
                            <input type="hidden" asp-for="ShopSettingId" />
                            <div class="form-group">
                                <label asp-for="Address" class="col-sm-2 control-label"></label>
                                <div class="col-sm-10">
                                    <input asp-for="Address" class="form-control" />
                                    <span asp-validation-for="Address" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="Email" class="col-sm-2 control-label"></label>
                                <div class="col-sm-10">
                                    <input asp-for="Email" class="form-control" id="email"/>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="Hotline" class="col-sm-2 control-label"></label>
                                <div class="col-sm-10">
                                    <input asp-for="Hotline" class="form-control" id="hotline" />
                                    <span asp-validation-for="Hotline" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-10 icheck-primary d-inline">
                                    <input type="checkbox" asp-for="MainAddress" class="form-control" />
                                    <label asp-for="MainAddress" class="col-sm-2 control-label"></label>
                                </div>
                            </div>
                        </div>
                        <!-- /.box-body -->
                    </div>
                    <div class="card-footer">
                        <a href="@Url.ActionLink("Index")" role="button" class="btn btn-default">Hủy</a>
                        <button type="submit" class="btn btn-info pull-right float-right">Cập nhật</button>
                    </div>
                </form>
            </div>
            <!-- /.card -->
        </div>
        <!-- /.col -->
    </div>
</section>

@section Scripts
{
    <!-- page script -->
    <script>
        function checkForm() {
            var hotlineReg = /((09|03|07|08|05|01)+([0-9]{8})\b)/g;
            var emailReg = /^([\w-\.]+\u0040([\w-]+\.)+[\w-]{2,4})?$/;
            var hotline = $('#hotline').val();
            var email = $('#email').val();
            if (hotline == '' && email == '') {
                return true;
            } else if (hotline != '' && hotlineReg.test(hotline) == false) {
                alert('Số điện thoại của bạn không đúng định dạng!');
                return false;
            } else if (email != '' && emailReg.test(email) == false) {
                alert('Email của bạn không đúng định dạng!');
                return false;
            } else {
                return true;
            }
        }
    </script>
}