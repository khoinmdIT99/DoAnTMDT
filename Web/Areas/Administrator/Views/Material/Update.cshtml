@model Domain.Shop.Dto.Materials.MaterialViewModel
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <form class="form-horizontal" method="post" action="@Url.ActionLink("Update")" asp-antiforgery="true">
                    <div class="card-header">
                        <h5 class="card-title">Cập nhật Chất liệu</h5>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <div class="box-body">
                            <input type="hidden"  asp-for="Id"/>
                            <div class="form-group">
                                <label asp-for="MaterialName" class="col-sm-2 control-label"></label>
                                <div class="col-sm-10">
                                    <input asp-for="MaterialName" class="form-control" />
                                    <span asp-validation-for="MaterialName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="Note" class="col-sm-2 control-label"></label>
                                <div class="col-sm-10">
                                    <input asp-for="Note" class="form-control" />
                                    <span asp-validation-for="Note" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <!-- /.box-body -->
                    </div>
                    <div class="card-footer">
                        <a href="@Url.ActionLink("Index")" role="button" class="btn btn-default">Hủy</a>
                        <button type="submit" class="btn btn-info pull-right float-right">Thêm mới</button>
                    </div>
                </form>
            </div>
            <!-- /.card -->
        </div>
        <!-- /.col -->
    </div>
</section>