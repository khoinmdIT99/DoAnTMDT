@model Domain.Shop.Dto.Tags.TagViewModel
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <form class="form-horizontal" method="post" action="@Url.ActionLink("Update")" asp-antiforgery="true">
                    <div class="card-header">
                        <h5 class="card-title">Cập nhật Tag</h5>
                    </div>
                    <!-- /.card-header -->

                    <div class="card-body">
                        <input asp-for="Id" hidden />
                        <div class="box-body">
                            <div class="form-group">
                                <label asp-for="Name" class="col-sm-2 control-label"></label>
                                <div class="col-sm-10">
                                    <input asp-for="Name" class="form-control" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <!-- /.box-body -->
                    </div>
                    <div class="card-footer">
                        <a href="@Url.ActionLink("Index")" role="button" class="btn btn-default">Huỷ</a>
                        <button type="submit" class="btn btn-info pull-right float-right">Cập nhật</button>
                    </div>
                    <!-- /.box-footer -->
                </form>
            </div>
            <!-- /.card -->
        </div>
        <!-- /.col -->
    </div>
</section>