@model Domain.Application.Dto.Configuration.ConfigurationViewModel
<section class="content">
	<div class="row">
		<div class="col-md-12">
			<div class="card card-primary card-outline card-outline-tabs">
				<form class="form-horizontal" method="post" action="@Url.ActionLink("Update")" asp-antiforgery="true">
					<div class="card-header p-0 border-bottom-0">
						<ul class="nav nav-tabs" id="custom-tabs-four-tab" role="tablist">
							<li class="nav-item">
								<a class="nav-link active" data-toggle="pill" href="#site-settings" role="tab" aria-controls="custom-tabs-four-home" aria-selected="true">Cấu hình trang</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" data-toggle="pill" href="#sso-settings" role="tab" aria-controls="custom-tabs-four-profile" aria-selected="false">Cấu hình SSO</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" data-toggle="pill" href="#mail-settings" role="tab" aria-controls="custom-tabs-four-messages" aria-selected="false">Cấu hình mail</a>
							</li>
						</ul>
					</div>
					<div class="card-body">
						<div class="tab-content" id="custom-tabs-four-tabContent">
							<div class="tab-pane fade show active" id="site-settings" role="tabpanel">
								<partial name="_SiteSetting" model="Model.SiteSetting" />
							</div>
							<div class="tab-pane fade" id="sso-settings" role="tabpanel">
								<partial name="_SSOSetting" model="Model.SSOSetting" />
							</div>
							<div class="tab-pane fade" id="mail-settings" role="tabpanel">
								<partial name="_MailSetting" model="Model.MailSetting" />
							</div>
						</div>
					</div>
					<!-- /.card -->
					<div class="card-footer">
						<button type="submit" class="btn btn-info pull-right float-right">Lưu cấu hình</button>
					</div>
				</form>
			</div>
		</div>
	</div>
</section>

@section Scripts {
	<script>
		$(function () {
			$("#EnableGoogleAuth0").change(function () {
				var checked = $(this).is(":checked")
				if (checked) {
					$("#GoogleClientId").closest(".form-group").show();
					$("#GoogleClientSecret").closest(".form-group").show();
				} else {
					$("#GoogleClientId").closest(".form-group").hide();
					$("#GoogleClientSecret").closest(".form-group").hide();
				}
			});
			$("#EnableGoogleAuth0").trigger("change");

			$("#ShowFooter").change(function () {
				var checked = $(this).is(":checked")
				if (checked) {
					$("#FooterData").closest(".form-group").show();
				} else {
					$("#FooterData").closest(".form-group").hide();
				}
			});
			$("#ShowFooter").trigger("change");
		});
	</script>
}