@model Domain.Application.Dto.Configuration.SiteSettingViewModel
<div class="box-body">
	<div class="form-group">
		<label asp-for="PageTitle" class="col-sm-2 control-label"></label>
		<div class="col-sm-10">
			<input asp-for="PageTitle" class="form-control" />
			<span asp-validation-for="PageTitle" class="text-danger"></span>
		</div>
	</div>
	<div class="form-group">
		<label asp-for="PageEmail" class="col-sm-2 control-label"></label>
		<div class="col-sm-10">
			<input asp-for="PageEmail" class="form-control" />
			<span asp-validation-for="PageEmail" class="text-danger"></span>
		</div>
	</div>
	<div class="form-group">
		<label asp-for="DefaultPageSize" class="col-sm-2 control-label"></label>
		<div class="col-sm-10">
			<input asp-for="DefaultPageSize" class="form-control" />
			<span asp-validation-for="DefaultPageSize" class="text-danger"></span>
		</div>
	</div>
	<div class="form-group">
		<label asp-for="PageSizeOptions" class="col-sm-2 control-label"></label>
		<div class="col-sm-10">
			<input asp-for="PageSizeOptions" class="form-control" />
			<span asp-validation-for="PageSizeOptions" class="text-danger"></span>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-10 icheck-primary d-inline">
			<input type="checkbox" asp-for="ShowFooter" class="form-control" />
			<label asp-for="ShowFooter" class="col-sm-2 control-label"></label>
		</div>
	</div>
	<div class="form-group">
		<label asp-for="FooterData" class="col-sm-2 control-label"></label>
		<div class="col-sm-10">
			<textarea asp-for="FooterData" class="form-control"></textarea>
			<span asp-validation-for="FooterData" class="text-danger"></span>
		</div>
	</div>
</div>
