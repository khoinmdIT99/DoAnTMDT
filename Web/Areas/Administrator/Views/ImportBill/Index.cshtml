@model List<Domain.Shop.Entities.ImportBill>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}
@section Styles {
    <link rel="stylesheet" href="//cdn.datatables.net/1.10.22/css/jquery.dataTables.min.css" />
    <link href="~/assets/js/toastr/toastr.css" rel="stylesheet" />
}
<div class="card">
    <div class="card-header">
    </div>
    <div class="card-body">
        <div id="view-list-import" style="padding-bottom: 100px;">
            @await Html.PartialAsync("_ViewListImports", Model)
        </div>
    </div>
</div>
<div class="modal fade" id="form-modal2" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-body">
            </div>
        </div>
    </div>
</div>
<!-- Modal HTML -->
<div id="delete-modal2" class="modal fade">
    <div class="modal-dialog modal-confirm">
        <div class="modal-content card">
            <div class="modal-header card-header">
                <h4 class="modal-title">Are you sure ?</h4>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            </div>
            <div class="modal-body card-body">
                <p>Do you really want to delete this Import ? This process cannot be undone.</p>
            </div>
            <div class="modal-footer card-footer">
                <button type="button" class="btn btn-info" data-dismiss="modal">Cancel</button>
                <button id="btnDelete" onclick="deleteImport()" type="button" class="btn btn-danger">Delete</button>
            </div>
            <input type="hidden" id="ImportBill_Id" name="ImportBill_Id" />
        </div>
    </div>
</div>
<div id="modalAddUpdate" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content ">
            <div class="modal-header">
                <h4 class="modal-title">Detail Import</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <table style="text-align: center;" class="table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                    <tr>
                        <th>Mã chi tiết</th>
                        <th>Tên sp</th>
                        <th>Số lượng</th>
                        <th>Đơn giá</th>
                    </tr>
                    </thead>
                    <tbody id="tblDataDetailImport"></tbody>
                </table>
                <script id="data-template-detailimport" type="x-tmpl-mustache">
                    <tr>
                        <td>{{IdDetailImport}}</td>
                        <td>{{NameProduct}}</td>
                        <td>{{Amount}}</td>
                        <td>{{Price}}</td>
                    </tr>
                </script>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-light" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>
@section Scripts
{
    <script src="~/dist/js/site2.js" asp-append-version="true"></script>
    <script src="~/assets/js/app2.js" asp-append-version="true"></script>
    <script src="~/assets/js/mustache.min.js"></script>
    <script src="//cdn.datatables.net/1.10.22/js/jquery.dataTables.min.js"></script>
    <script src="~/assets/js/toastr/toastr.js"></script>
    <script type="text/javascript" language="javascript" src="https://cdn.datatables.net/buttons/1.5.2/js/dataTables.buttons.min.js"></script>
    <script type="text/javascript" language="javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
    <script type="text/javascript" language="javascript" src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.36/pdfmake.min.js"></script>
    <script type="text/javascript" language="javascript" src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.36/vfs_fonts.js"></script>
    <script type="text/javascript" language="javascript" src="https://cdn.datatables.net/buttons/1.5.2/js/buttons.html5.min.js"></script>
    <script type="text/javascript" language="javascript" src="https://cdn.datatables.net/buttons/1.2.1/js/buttons.print.min.js"></script>

}
