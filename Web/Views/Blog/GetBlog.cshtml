@model Domain.Shop.Dto.Blogs.BlogViewModel
@{
    ViewData["Title"] = "BLog Detail";
    ViewData["Name"] = "Bài viết";
    ViewData["Controller"] = "Danh sách Blog";
    ViewData["Action"] = "Chi tiết";
}
@if (!ViewBag.BlogExists)
{
    <h2 style="text-align:center">Blog chưa được viết ! Xin vui lòng quay lại sau</h2>
    <a class="btn btn-success" asp-action="Index" asp-controller="Home" asp-area="" style="margin:auto">Quay lại trang chủ</a>
}
else
{
    <div id="wrapper" class="wrapper-fluid banner-effect-3">
        <div class="portfolio-detail portfolio-2-column">
            <div class="container">
                <div class="row">
                    <div class="col-lg-6 col-md-8 portfolio-detail-top">
                        <h1 class="portfolio-detail-title">@Model.Title</h1>
                        <div class="rating">
                            <div class="rating-box">
                                <span class="fa fa-stack">
                                    <i class="fa fa-star fa-stack-1x"></i>
                                    <i class="fa fa-star-o fa-stack-1x"></i>
                                </span>
                                <span class="fa fa-stack">
                                    <i class="fa fa-star fa-stack-1x"></i>
                                    <i class="fa fa-star-o fa-stack-1x"></i>
                                </span>
                                <span class="fa fa-stack">
                                    <i class="fa fa-star fa-stack-1x"></i>
                                    <i class="fa fa-star-o fa-stack-1x"></i>
                                </span>
                                <span class="fa fa-stack">
                                    <i class="fa fa-star fa-stack-1x"></i>
                                    <i class="fa fa-star-o fa-stack-1x"></i>
                                </span>
                                <span class="fa fa-stack">
                                    <i class="fa fa-star-o fa-stack-1x"></i>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        @Html.Raw(Model.Content)
                    </div>
                </div>
            </div>
        </div>
    </div>
}


