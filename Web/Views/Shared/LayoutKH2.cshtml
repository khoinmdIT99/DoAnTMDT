                            }
                            else {
                                location.href = '@Url.Content("~/trangchu.html")';
                            }
                        }*@
                    });
                });

            function compareLargeStrings(a, b) {
                if (a.length !== b.length) {
                    return false;
                }
                return a.localeCompare(b) === 0;
            }

            $('#crBtn').click(function(e) {
                e.preventDefault();
                var name = $('#crName').val();
                var email = $('#crEmail').val();
                var password = $('#crPassword').val();
                var repassword = $('#crRePassword').val();
                var avatar = $("input[name=test]:checked").val();
                var data = {};
                data.fullName = name;
                data.email = email;
                data.password = password;
                data.avatar = avatar;

                if (name === '' || password === '' || !compareLargeStrings(password.trim(), repassword.trim())) {
                    e.preventDefault();
                    Swal.fire('Kiểm tra lại dữ liệu nhập vào', "", "error");

                    if (!validateEmail(email)) {
                        e.preventDefault();
                        Swal.fire('Email không hợp lệ', "", "error");
                    }
                } else {
                    e.preventDefault();
                    $.blockUI({ message: '<h1><img src="~/throbber.gif"/> Just a moment...</h1>' });

                    $.ajax({
                        type: 'Post',
                        contentType: "application/json; charset=utf-8",
                        data: JSON.stringify(data),
                        url: '@Url.Action("AddUser", "Auth")',

                        success: function(data) {
                            if (data.includes("thành công")) {
                                $.unblockUI();
                                Swal.fire(
                                    data,
                                    '',
                                    'success'
                                );
                                $('#closeModalBtn').click();
                                location.href = '@Url.Content("~/trangchu.html")';
                            }
                            else {
                                e.preventDefault();
                                $.unblockUI();
                                Swal.fire(data.message, "", "error");
                            }
                        },
                        error: function() {
                            $.unblockUI();
                            Swal.fire('Data sending error ...', "", "error");
                        }
                    });

                }
            });
            $('#forgotBtn').on("click",
                function(e) {
                    e.preventDefault();
                    var bla = $('#forgot-email').val();
                    var sData = {
                        email: bla
                    };
                    $.blockUI({ message: '<h1><img src="~/busy.gif" /> Just a moment...</h1>' });


                    $.ajax({
                        url: "/Auth/ForgotPassword",
