@{
    var userId = ViewBag.Age;
    var userName = ViewBag.Name;

}
<style>
    button, input, optgroup, select, textarea {
        font: caption;
    }
</style>
@{
    @if (userId != null)
    {
        <li>
            <a id="logoutBtn" class="smooth" title="">
                <i class="fa fa-check-square-o" aria-hidden="true"></i>
                Đăng xuất - @userName
            </a>
        </li>
    }
    else
    {
        <li>
            <a href="#" data-toggle="modal" data-target="#loginModal" class="smooth" title="">
                <i class="fa fa-check-square-o" aria-hidden="true"></i>
                Đăng nhập
            </a>
        </li>
    }
}
<div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4>Login</h4>
                <button id="closeModalBtn" type="button" class="close" data-dismiss="modal"> &times;</button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-xs-6">
                        <div class="well">
                            <form class="login-form">
                                <div class="form-group">
                                    <label class="control-label">Tài khoản</label><input class="form-control" id="loginEmail" name="loginEmail" value="" title="Xin vui lòng nhập tên tài khoản" placeholder="Tài khoản" type="text" required><span class="help-block"></span>
                                </div>
                                <div class="form-group">
                                    <label class="control-label">Mật khẩu</label><input class="form-control" id="loginPassword" name="loginPassword" value="" title="Xin vui lòng nhập mật khẩu" placeholder="Password" type="password" required><span class="help-block"></span>
                                </div>
                                <div id="loginErrorMsg" class="alert alert-error hide">Sai tên tài khoản hay mật khẩu</div>
                                <div class="checkbox">
                                    <label>
                                        <input name="remember" id="remember" type="checkbox">
                                        Nhớ thông tin
                                    </label>
                                    <p class="help-block">(Nếu sử dụng máy tính cá nhân)</p>

                                </div>
                                <button id="loginBtn" class="btn btn-success btn-block">Đăng nhập</button><a href="http://hocwebgiare.com/" class="btn btn-default btn-block">Quên mật khẩu?</a>
                            </form>
                        </div>
                    </div>
                    <div class="col-xs-6">
                        <div class="well">
                            Đăng ký khách hàng <span class="text-success">ONLINE</span>
                            <form class="register-form">
                                <div class="form-group">
                                    <label class="control-label">Tên</label>
                                    <input class="form-control" id="crName" type="text" placeholder="Name" />
                                </div>
                                <div class="form-group">
                                    <label class="control-label">Email</label>
                                    <input class="form-control" id="crEmail" type="text" placeholder="E-mail address" />
                                </div>
                                <div class="form-group">
                                    <label class="control-label">Password</label>
                                    <input class="form-control" id="crPassword" type="password" placeholder="Password" />
                                </div>
                                <div class="form-group">
                                    <label class="control-label">RetypePassword</label>
                                    <input class="form-control" id="crRePassword" type="password" placeholder="Retype Password" />
                                </div>
                                <button id="crBtn" class="btn btn-info btn-block">Đăng ký</button>
                                @*<button id="demo">Click me.</button>*@

                            </form>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</div>

