        }

    #section-466-50938 > .ct-section-inner-wrap {
        padding-top: 75px;
        padding-bottom: 80px;
        align-items: center;
    }

    #headline-467-50938 {
        font-family: 'Poppins';
        color: #243641;
        font-size: 42px;
        margin-bottom: 20px;
