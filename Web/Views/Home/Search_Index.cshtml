    }

        #section-79-50938 > .ct-section-inner-wrap {
            padding-top: 75px;
            padding-bottom: 75px;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

    #headline-238-50938 {
        font-family: 'Poppins';
        color: #243641;
        margin-bottom: 25px;
        font-weight: 800;
    }

    #_rich_text-271-50938 {
        margin-bottom: 20px;
    }

    hr {
        border: 2px solid #ff2b1a;
        width: 90px;
        margin-top: 20px;
    }

    #link_button-267-50938 {
        margin-top: 20px;
        font-size: 15px;
        padding-left: 30px;
        padding-right: 30px;
        transition-duration: .2s;
        transition-timing-function: ease-in-out;
        url-encoded: true;
    }

    #link_button-267-50938 {
        background-color: #243641;
        border: 1px solid #243641;
    }

    .home-button {
        margin: 0;
        margin-top: 0px;
    }

    .home-button {
        margin-top: 15px;
    }

    .ct-link-button {
        font-weight: 800;
        border-radius: 4px;
    }

    .ct-link-button {
        background-color: #1e73be;
        border: 1px solid #1e73be;
