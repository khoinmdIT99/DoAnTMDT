    }

    #code_block-468-50938 {
        width: 900px;
    }

    .custom-home-search input {
        border: none;
        width: 80%;
        font-size: 100%;
        line-height: 1.15;
        margin: 0;
        overflow: visible;
        box-sizing: inherit;
    }

    .container-search {
        padding: 15px;
        border: 1px solid #f1f1f1;
        border-radius: 5px;
    }
    /* SUBMIT BUTTON CSS
    --------------------*/
    .custom-home-search input[type=submit] {
        background: red;
        color: #fff;
        width: 15%;
        padding: 20px;
        border-radius: 5px;
    }

