}
<!-- //HOME SLIDER -->
<!-- DEALS DAY -->
<div class="deals-days">
    <div class="container deals-container clearfix">

        @await Component.InvokeAsync("Deal")

        <div class="deals-left deals-right">
            <h4 class="deals-title">
                popular <span>product</span>
            </h4>
            <div class="deals-right-desc">

                @await Component.InvokeAsync("Popular")

            </div>
        </div>

    </div>
</div>
<!-- //DEALS DAYS -->
<!-- BANNER -->
<div class="banner">
    <div class="container">
        <div class="row row0">
            <div class="col-lg-4 col-md-4 col-sm-4 col-xs-6 col0">
                <a href="#" class="hv-border-inline-bg">
                    <img src="~/Test/image/catalog/demo/slider/home1/collection2.jpg" class="img-responsive" alt="">
                </a>
            </div>
            <div class="col-lg-4 col-md-4 col-sm-4 col-xs-6 col0">
                <a href="#" class="hv-border-inline-bg">
                    <img src="~/Test/image/catalog/demo/slider/home1/collection1.jpg" class="img-responsive" alt="">
                </a>
            </div>
            <div class="col-lg-4 col-md-4 col-sm-4 col-xs-6 col0">
                <a href="#" class="hv-border-inline-bg">
                    <img src="~/Test/image/catalog/demo/slider/home1/collection3.jpg" class="img-responsive" alt="">
                </a>
            </div>
        </div>
    </div>
</div>
<!-- //BANNER -->

<div class="featured-products best-seller">
    <div class="container">
        <h3 class="featured-title">
            <span>
                FEATURED <span>PRODUCTS</span>
            </span>
        </h3>
