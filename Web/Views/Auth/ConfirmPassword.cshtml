@{
    Layout = null;
    string domainName = @ViewBag.Url;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Thông báo</title>
    <script src="https://code.jquery.com/jquery-1.9.1.min.js"></script>
</head>
<body>
    <div style="margin:200px auto; width:650px; text-align:center;">
        <h4>@ViewBag.Message</h4>
        <p>Đang chuyển đến trang chủ, xin vui lòng đợi...</p>
        <img src="~/throbber.gif" alt="vui lòng đợi..." />
    </div>
    <script type="text/javascript">
        $( document ).ready(function () {
            setTimeout(function () { window.location = '@domainName'; }, 5000);
        });
    </script>
</body>
</html>